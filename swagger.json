{
    "openapi": "3.0.1",
    "info": {
        "title": "ShortLink",
        "description": "API documentation that shortens links",
        "version": "1.0.0"
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "apiKey",
                "in": "header",
                "name": "Authorization",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "basePath": "/",
    "paths": {
        "/": {
            "get": {
                "description": "Route that returns API health message",
                "tags": [
                    "Home"
                ],
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK."
                    }
                }
            }
        },
        "/login": {
            "post": {
                "description": "API login route",
                "sumary": "Login route",
                "tags": [
                    "Login"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "email": "wanderson@email.com",
                                    "password": "123456"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login performed and JWT token generated."
                    },
                    "400": {
                        "description": "Incorrect email or password. | User not found."
                    },
                    "500": {
                        "description": "JWT generate error."
                    }
                }
            }
        },
        "/users": {
            "get": {
                "description": "API route responsible for fetching all registered users <strong>(*Admin account required)</strong>",
                "sumary": "Return users",
                "tags": [
                    "Users"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "Success."
                    },
                    "400": {
                        "description": "Users not found."
                    },
                    "403": {
                        "description": "Forbidden."
                    },
                    "500": {
                        "description": "Internal Server Error."
                    }
                }
            },
            "post": {
                "description": "User creation wheel in API",
                "sumary": "Route to create users",
                "tags": [
                    "Users"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Test",
                                    "email": "teste@email.com",
                                    "password": "123456"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success."
                    },
                    "400": {
                        "description": "Error creating user."
                    },
                    "500": {
                        "description": "Internal server error."
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "description": "API route that returns the user by id <strong>(*Admin account required)</strong>",
                "sumary": "Return user by id",
                "tags": [
                    "Users"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "The ID of the user to retrieve",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "mongoid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success."
                    },
                    "400": {
                        "description": "User not found."
                    },
                    "403": {
                        "description": "Forbidden."
                    },
                    "500": {
                        "description": "Internal Server Error."
                    }
                }
            },
            "put": {
                "description": "API route responsible for performing user updates <strong>(*Admin account required)</strong>",
                "sumary": "Route to update users",
                "tags": [
                    "Users"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "The ID of the user to retrieve",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "mongoid"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Test",
                                    "email": "teste@email.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User updated successfully."
                    },
                    "400": {
                        "description": "User not found."
                    },
                    "403": {
                        "description": "Forbidden."
                    },
                    "500": {
                        "description": "Internal server error."
                    }
                }
            },
            "delete": {
                "description": "API route responsible for deleting a user <strong>(*Admin account required)</strong>",
                "sumary": "Route to delete users",
                "tags": [
                    "Users"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "The ID of the user to retrieve",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "mongoid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User deleted successfully."
                    },
                    "400": {
                        "description": "User not found. | Invalid ID."
                    },
                    "403": {
                        "description": "Forbidden."
                    },
                    "500": {
                        "description": "Internal server error."
                    }
                }
            }
        }
    }
}